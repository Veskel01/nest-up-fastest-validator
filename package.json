{
  "name": "@nest-up/nest-fastest-validator",
  "version": "1.0.1",
  "description": "Custom Nest.js wrapper package for fastest-validator",
  "author": "Jakub Andrzejewski (Veskel01)",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "keywords": [
    "nestjs",
    "fastest-validator",
    "validator",
    "validation",
    "nestjs-validation"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "npm run prebuild && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "test:e2e:dev": "jest --config ./tests/jest-e2e.json --watch",
    "debug": "nest start --watch --debug"
  },
  "devDependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/testing": "9.0.11",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "18.6.2",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "class-transformer": "^0.5.1",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "fastest-validator": "^1.15.0",
    "jest": "28.1.3",
    "prettier": "2.7.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.0 || ^9.0.0",
    "@nestjs/core": "^8.0.0 || ^9.0.0",
    "class-transformer": "^0.5.1",
    "fastest-validator": "^1.15.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veskel01/nest-up-fastest-validator.git"
  },
  "homepage": "https://github.com/Veskel01/nest-up-fastest-validator.git#readme",
  "bugs": {
    "url": "https://github.com/Veskel01/nest-up-fastest-validator/issues"
  },
  "dependencies": {
    "@nestjs/platform-express": "^9.0.11"
  }
}
